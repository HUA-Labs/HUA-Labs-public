{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalPassThroughEnv": [
    "PATH",
    "NODE"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "DIRECT_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "SUPABASE_SERVICE_ROLE_KEY",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "KAKAO_CLIENT_ID",
        "KAKAO_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "ENCRYPTION_KEY",
        "DEFAULT_AI_PROVIDER",
        "OPENAI_API_KEY",
        "GEMINI_API_KEY",
        "GEMINI_GEMINI_2_5_FLASH_INPUT_PER_1K_USD",
        "GEMINI_GEMINI_2_5_FLASH_OUTPUT_PER_1K_USD",
        "OPENAI_GPT5_MINI_INPUT_PER_1K_USD",
        "OPENAI_GPT5_MINI_OUTPUT_PER_1K_USD",
        "OPENAI_GPT4O_MINI_INPUT_PER_1K_USD",
        "OPENAI_GPT4O_MINI_OUTPUT_PER_1K_USD",
        "DIRECT_URL"
      ],
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "@hua-labs/ui#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/i18n-core#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/motion-core#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/utils#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/i18n-core-zustand#build": {
      "dependsOn": [
        "@hua-labs/i18n-core#build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/i18n-loaders#build": {
      "dependsOn": [
        "@hua-labs/i18n-core#build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/i18n-formatters#build": {
      "dependsOn": [
        "@hua-labs/i18n-core#build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/hooks#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    },
    "@hua-labs/state#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**"
      ]
    }
  }
}
