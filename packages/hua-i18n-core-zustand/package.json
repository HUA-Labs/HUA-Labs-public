{
  "name": "@hua-labs/i18n-core-zustand",
  "version": "2.0.3",
  "description": "Zustand adapter for @hua-labs/i18n-core - Type-safe state management integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo 'Skipping lint for hua-i18n-core-zustand'",
    "type-check": "tsc --noEmit"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@hua-labs/i18n-core": "workspace:*",
    "@hua-labs/state": "workspace:*"
  },
  "peerDependencies": {
    "zustand": "^4.0.0 || ^5.0.0",
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.14",
    "@vitejs/plugin-react": "^5.1.4",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zustand": "^5.0.11"
  },
  "keywords": [
    "hua-labs",
    "i18n",
    "internationalization",
    "zustand",
    "state-management",
    "adapter",
    "react",
    "typescript",
    "ssr"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}