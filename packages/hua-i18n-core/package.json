{
  "name": "@hua-labs/i18n-core",
  "version": "1.1.0",
  "description": "HUA Labs - Core i18n functionality with SSR/CSR support and state management integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "echo 'Skipping lint for hua-i18n-core (ESLint 8, needs separate config)'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.1",
    "jest": "^29.0.0",
    "react": "^19.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "keywords": [
    "hua-labs",
    "i18n",
    "internationalization",
    "localization",
    "react",
    "typescript",
    "ssr",
    "csr",
    "translation",
    "nextjs",
    "zero-flicker"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
