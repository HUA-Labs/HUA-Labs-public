{
  "name": "@hua-labs/i18n-core",
  "version": "2.0.2",
  "description": "HUA Labs - Core i18n functionality with SSR/CSR support and state management integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo 'Skipping lint for hua-i18n-core (ESLint 8, needs separate config)'",
    "type-check": "tsc --noEmit",
    "generate:types": "tsx scripts/generate-i18n-types.ts",
    "validate:translations": "tsx scripts/validate-translations.ts"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^10.0.0",
    "jsdom": "^26.1.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.1"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "keywords": [
    "hua-labs",
    "i18n",
    "internationalization",
    "localization",
    "react",
    "typescript",
    "ssr",
    "csr",
    "translation",
    "nextjs",
    "zero-flicker"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}