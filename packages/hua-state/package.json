{
  "name": "@hua-labs/state",
  "version": "0.1.0-alpha.1",
  "description": "HUA State - Unified state management for hua-ux framework with SSR support and integrations",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./integrations/i18n": {
      "types": "./dist/integrations/i18n.d.ts",
      "import": "./dist/integrations/i18n.js",
      "require": "./dist/integrations/i18n.js",
      "default": "./dist/integrations/i18n.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "node ../../node_modules/typescript/lib/tsc.js",
    "dev": "node ../../node_modules/typescript/lib/tsc.js --watch",
    "clean": "rm -rf dist",
    "lint": "echo 'Skipping lint for hua-state (ESLint 8, needs separate config)'",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "zustand": ">=5.0.0"
  },
  "keywords": [
    "hua-labs",
    "state-management",
    "zustand",
    "react",
    "typescript",
    "ssr",
    "hydration",
    "persistence",
    "i18n",
    "nextjs"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "devDependencies": {
    "@hua-labs/i18n-core-zustand": "workspace:*",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}