{
  "name": "@hua-labs/state",
  "version": "1.0.0",
  "description": "HUA State - Unified state management for hua framework with SSR support and integrations",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./integrations/i18n": {
      "types": "./dist/integrations/i18n.d.ts",
      "import": "./dist/integrations/i18n.mjs",
      "require": "./dist/integrations/i18n.js",
      "default": "./dist/integrations/i18n.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "echo 'Skipping lint for hua-state (ESLint 8, needs separate config)'",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "zustand": ">=5.0.0"
  },
  "keywords": [
    "hua-labs",
    "state-management",
    "zustand",
    "react",
    "typescript",
    "ssr",
    "hydration",
    "persistence",
    "i18n",
    "nextjs"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}