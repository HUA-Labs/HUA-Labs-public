{
  "name": "@hua-labs/motion-core",
  "version": "2.1.0-alpha.3",
  "description": "HUA Motion Core - Essential animation hooks for React developers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node ../../node_modules/typescript/lib/tsc.js",
    "dev": "node ../../node_modules/typescript/lib/tsc.js --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "echo 'Skipping lint for hua-motion-core (ESLint 8, needs separate config)'",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "keywords": [
    "hua-labs",
    "react",
    "typescript",
    "motion",
    "animation",
    "hooks",
    "transitions",
    "gestures",
    "scroll",
    "fade",
    "slide",
    "spring",
    "performance",
    "ssr",
    "nextjs"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
