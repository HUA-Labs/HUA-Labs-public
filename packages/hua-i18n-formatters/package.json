{
  "name": "@hua-labs/i18n-formatters",
  "version": "1.1.0",
  "description": "HUA Labs - Date, Number, and Currency formatting utilities for i18n",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./date": {
      "types": "./dist/date/index.d.ts",
      "import": "./dist/date/index.mjs",
      "require": "./dist/date/index.js"
    },
    "./number": {
      "types": "./dist/number/index.d.ts",
      "import": "./dist/number/index.mjs",
      "require": "./dist/number/index.js"
    },
    "./currency": {
      "types": "./dist/currency/index.d.ts",
      "import": "./dist/currency/index.mjs",
      "require": "./dist/currency/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "sideEffects": false,
  "dependencies": {
    "@hua-labs/i18n-core": "workspace:^"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "react": "^19.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "date",
    "number",
    "currency",
    "formatting",
    "localization"
  ],
  "author": "HUA Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "bugs": {
    "url": "https://github.com/HUA-Labs/HUA-Labs-public/issues"
  },
  "homepage": "https://github.com/HUA-Labs/HUA-Labs-public#readme",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
