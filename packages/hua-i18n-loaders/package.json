{
  "name": "@hua-labs/i18n-loaders",
  "version": "0.1.0",
  "description": "Production-ready loaders, caching, and preloading helpers for @hua-labs/i18n-core.",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "echo \"No tests defined\"",
    "lint": "echo 'Skipping lint for hua-i18n-loaders (TypeScript only, linted by tsc)'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hua-labs/i18n-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.8.3",
    "eslint": "^8.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "loader",
    "preload",
    "cache"
  ],
  "license": "MIT"
}

