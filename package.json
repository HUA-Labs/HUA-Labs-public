{
  "name": "hua-platform",
  "version": "1.0.0",
  "description": "HUA Labs - 감정 인터페이스 플랫폼",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:my-api": "cd apps/my-api && npm run build",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "node-gyp": "^12.1.0",
    "playwright": "^1.56.1",
    "storybook": "8.6.14",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.17.0"
  },
  "dependencies": {
    "pnpm": "^10.18.2"
  }
}
