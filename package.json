{
  "name": "hua-platform",
  "version": "1.0.0",
  "description": "HUA Labs - 감정 인터페이스 플랫폼",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
