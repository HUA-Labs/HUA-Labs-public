{
  "name": "hua-platform",
  "version": "1.0.0",
  "description": "HUA Labs - 감정 인터페이스 플랫폼",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:my-api": "cd apps/my-api && npm run build",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:pr": "tsx scripts/generate-pr.ts",
    "generate:devlog": "tsx scripts/generate-devlog.ts",
    "generate:ai-context": "tsx scripts/generate-ai-context.ts",
    "generate:review-checklist": "tsx scripts/generate-review-checklist.ts",
    "update:docs": "tsx scripts/update-docs.ts",
    "update:docs:check": "tsx scripts/update-docs.ts --check-only"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@types/node": "^24.10.8",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "node-gyp": "^12.1.0",
    "playwright": "^1.57.0",
    "storybook": "8.6.14",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "turbo": "2.6.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17",
    "zustand": "^5.0.10"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "22.x",
    "pnpm": ">=10.17.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "2.1.7",
    "pnpm": "^10.28.0",
    "pretendard": "^1.3.9"
  }
}
