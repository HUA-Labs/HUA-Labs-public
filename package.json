{
  "name": "hua-labs-public",
  "version": "1.0.0",
  "description": "HUA Labs Public SDKs and Libraries",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "publish": "turbo run publish",
    "version": "changeset version",
    "release": "pnpm -r publish --access public --no-git-checks",
    "release:dry": "changeset publish --dry-run",
    "deps:check": "syncpack list-mismatches",
    "deps:fix": "syncpack fix-mismatches",
    "deps:format": "syncpack format"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "changesets": "^1.0.2",
    "syncpack": "^13.0.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HUA-Labs/HUA-Labs-public.git"
  },
  "keywords": [
    "hua-labs",
    "sdk",
    "i18n",
    "ui",
    "animation",
    "motion",
    "react",
    "typescript"
  ],
  "author": "HUA Labs Team",
  "license": "MIT"
}