{
  "name": "hua-platform",
  "version": "1.0.0",
  "description": "HUA Labs - 감정 인터페이스 플랫폼",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "generate:pr": "tsx scripts/generate-pr.ts",
    "generate:devlog": "tsx scripts/generate-devlog.ts",
    "generate:ai-context": "tsx scripts/generate-ai-context.ts",
    "generate:review-checklist": "tsx scripts/generate-review-checklist.ts",
    "update:docs": "tsx scripts/update-docs.ts",
    "update:docs:check": "tsx scripts/update-docs.ts --check-only",
    "generate:docs": "tsx scripts/generate-docs.ts",
    "generate:docs:validate": "tsx scripts/generate-docs.ts --validate",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "1.58.2",
    "@tailwindcss/postcss": "4.1.18",
    "@types/node": "^25.2.0",
    "@types/react": "19.2.14",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-gyp": "^12.2.0",
    "playwright": "^1.58.2",
    "tailwindcss": "4.1.18",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "turbo": "2.8.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2",
    "zustand": "^5.0.11"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": "22.x",
    "pnpm": ">=10.17.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "2.1.44",
    "pnpm": "^10.29.3",
    "pretendard": "^1.3.9"
  },
  "pnpm": {
    "patchedDependencies": {
      "@phosphor-icons/react@2.1.10": "patches/@phosphor-icons__react@2.1.10.patch"
    }
  }
}
